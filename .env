############################################
# TigerGraph Community Edition
############################################
TG_CONTAINER_NAME=tigergraph
TG_USER=tigergraph
TG_PASSWORD=tigergraph
TG_GRAPH=DocGraph
TG_TOKEN_TTL=2592000          # seconds (~30 days)
TG_REST_PORT=9100             # host port mapped to RESTPP in the container
TG_GSQL_PORT=14240            # host port mapped to GSQL/Studio

############################################
# MinIO (S3-compatible)
############################################
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=changeme-strong
MINIO_BUCKET=docs
MINIO_PORT=9000               # MinIO API (host)
MINIO_CONSOLE_PORT=9001       # MinIO console (host)

############################################
# Worker / Embeddings Model
############################################
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
# IMPORTANT: keep EMBED_DIM consistent with model above (MiniLM-L6-v2 -> 384)
EMBED_DIM=384

# Batch size for embeddings (raise if you have more RAM/CPU)
BATCH_SIZE=16

############################################
# Text Chunking (used for PDFs and long texts)
############################################
# Simple whitespace tokenization; adjust for your model if needed
CHUNK_TOKENS=512
CHUNK_OVERLAP=64

############################################
# Embedding Sets (enable/disable)
############################################
# 1 = enabled, 0 = disabled
ENABLE_DOC_EMB=1              # aggregate doc-level embeddings
ENABLE_PAGE_EMB=1             # per-page aggregated embeddings
ENABLE_CHUNK_EMB=1            # fine-grained chunk embeddings

# Aggregation method for page->doc (and chunk->page)
AGG_METHOD=mean               # mean (default); implement median if needed

# Safety bound on how much of the doc text we store in TG
MAX_DOC_TEXT_CHARS=200000

############################################
# Pageâ†’Page Similarity Export (optional)
############################################
PAGE_SIM_TOPK=10              # top-K neighbors per page
PAGE_SIM_SAMPLE=0             # 0 = all pages; N = sample N pages
PAGE_SIM_BATCH=2048           # block size for pairwise sim computation

############################################
# Worker API (FastAPI)
############################################
API_PORT=8000                 # exposed on host as ${API_PORT}:8000

############################################
# Networking
############################################
NETWORK_NAME=tgnet


############################################
# Optional LLM / Embedding defaults
############################################
EMBED_DEVICE=
EMBED_BATCH_SIZE=
CHUNK_SIZE=
TOP_K=
LLM_PROVIDER=
LLM_MODEL=
LLM_TEMPERATURE=
OPENAI_API_KEY=
OPENAI_API_BASE=
OLLAMA_BASE_URL=
VLLM_API_BASE=
VLLM_MODEL=
VLLM_PORT=8001
OLLAMA_PORT=11434
